@model IQueryable<IdentityRole>
@{
    ViewData["Title"] = "List Roles";
}

<h1>Roles <a asp-controller="administration" asp-action="createRole" class="btn btn-primary mb-3">Create New Role</a></h1> 

@if (Model.Any())
{
    

    foreach (var role in Model)
    {
        <div class="card mb-5">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5>@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="administration" asp-action="editRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="administration" asp-action="deleteRole" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the Button Below to Create a Role</h5>

            <a asp-controller="administration" asp-action="createRole" class="btn btn-primary">Create Role</a>
        </div>
    </div>
}