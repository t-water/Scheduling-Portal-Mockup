@model List<ManageRolesViewModel>
@{
    ViewData["Title"] = "ManageRoles";
}

<h1>Manage Roles For User: @ViewBag.FullName</h1>

@if (Model.Any())
{
    <form asp-action="manageroles" asp-route-id="@ViewBag.UserID">
        @for(int i=0; i<Model.Count; i++)
        {
        <div class="form-check m-1">
            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                @Model[i].RoleName
            </label>
            <input type="hidden" asp-for="@Model[i].RoleName" />
        </div>
        }
        <div class="form-group">
            <button type="submit" class="btn btn-warning">Update Roles</button>
        </div>
    </form>

}